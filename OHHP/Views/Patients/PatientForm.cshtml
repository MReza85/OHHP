@model OHHP.ViewModels.PatientFormViewModel
@{
    ViewBag.Title = "New/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New/Edit Patient</h2>

@using (Html.BeginForm("Save", "Patients"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.Name)
        @Html.TextBoxFor(m => m.Patient.Name, new { @class="form-control" })
    </div> 

    <div class="form-group">
        @Html.LabelFor(m => m.Patient.Birthdate)
        @Html.TextBoxFor(m => m.Patient.Birthdate, "{0:MM/dd/yyyy}", new { @class="form-control",@* type="date"*@ })
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Patient.Journal)
        @Html.TextAreaFor(m => m.Patient.Journal, new {@class = "form-control", style= "width: 400px; max-width: 100%; min-width:20%; height:200px;" })
    </div>
  
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.MembershipTypeId)
        @Html.DropDownListFor(m => m.Patient.MembershipTypeId, new SelectList(Model.MembershipTypes,"Id","Name"), "Select Membership Type", new { @class = "form-control"})
    </div>
    
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Patient.IsSubscirbedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>

    @Html.HiddenFor(m=>m.Patient.Id)

    <button type="submit" class="btn btn-primary">Save</button>

}