@model OHHP.ViewModels.RoomFormViewModel
@{
    ViewBag.Title = Model.Title;
  @*  Layout = "~/Views/Shared/_Layout.cshtml";*@
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Rooms"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(r => r.Name)
        @Html.TextBoxFor(r => r.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(r => r.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(r => r.RoomTypeId)
        @Html.DropDownListFor(r => r.RoomTypeId,
            new SelectList(Model.RoomTypes, "Id", "Name"), "Select room type",
            new {@class = "form-control"})
        @Html.ValidationMessageFor(r => r.RoomTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.NumberOfBeds)
        @Html.TextBoxFor(r => r.NumberOfBeds, new {@class = "form-control"})
        @Html.ValidationMessageFor(r => r.NumberOfBeds)
    </div>
    @Html.HiddenFor(r => r.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}